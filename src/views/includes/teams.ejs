<div class="teams-container">
    <div class="teams-box-container">
        <% for (let team of teams){ %> 
            <% if(selectedTeam && team.id == selectedTeam.id){ %>
                <div class="team-box selected">
                    <p><%=team.name%></p>
                </div>
            <% } else { %>
                <form action="/enterprises/home/<%= team.id %>" class="team-box" method="get">
                    <button>
                        <%=team.name%>
                    </button>
                </form>
            <% } %>
        <% } %> 
    </div>

    <div class="teams-add" onclick="toggleModalTeam()">
        <p>+</p>
    </div>
</div>

<div id="teams-create-bg">
    <div class="teams-create-card">
        <form action="/teams" method="post">
            <h3>Criar Equipe</h3>
            <label for="name">Nome:</label>
            <input class="input-name" type="text" name="name" id="">
            <label for="description">Descrição:</label>
            <input class="input-name" type="text" name="description" id="" value="">

            <div class="teams-button-container">
                <div class="teams-button cancel" onclick="toggleModalTeam()"><p>Cancelar</p></div>
                <input class="teams-button" type="submit" value="Criar">
            </div>
        </form>
    </div>
</div>

<script src="/js/teams.js"></script>